{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppName": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "appInsightsLocation": {
            "type": "string"
        },
        "sku": {
            "type": "string",
            "defaultValue": "Standard S1"
        }
    },
    "variables": {
        "dataAppName": "[concat('data-', parameters('webAppName'))]",
        "contentAppName": "[concat('content-', parameters('webAppName'))]",
        "dataPlanName": "[concat('data-', parameters('hostingPlanName'))]", 
        "contentPlanName": "[concat('content-', parameters('hostingPlanName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "name": "[parameters('dataAppName')]",
            "apiVersion": "2016-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', '/subscriptions/', subscription().subscriptionId,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('dataPlanName'))]": "empty"
            },
            "resources": [
                {
                    "type": "siteextensions",
                    "name": "Microsoft.ApplicationInsights.AzureWebSites",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('dataAppName'))]"
                    ],
                    "properties": {
                    }
                }
            ],
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', parameters('dataAppName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.9.1"
                        }
                    ],
                    "phpVersion": "7.1"
                },
                "name": "[parameters('dataAppName')]",
                "serverFarmId": "[concat('/subscriptions/', subscription().subscriptionId,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('dataPlanName'))]",
                "hostingEnvironment": ""
            },
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('dataPlanName'))]",
                "[resourceId('microsoft.insights/components/', parameters('dataAppName'))]"
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "Tier": "[first(skip(split(parameters('sku'), ' '), 1))]",
                "Name": "[first(split(parameters('sku'), ' '))]"
            },
            "name": "[parameters('dataPlanName')]",
            "apiVersion": "2015-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('dataPlanName')]",
                "workerSizeId": "0",
                "reserved": false,
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "name": "[parameters('dataAppName')]",
            "apiVersion": "2014-04-01",
            "location": "[parameters('appInsightsLocation')]",
            "tags": {
                "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('dataAppName'))]": "Resource"
            },
            "properties": {
                "applicationId": "[parameters('dataAppName')]",
                "Request_Source": "AzureTfsExtensionAzureProject"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "name": "[parameters('contentAppName')]",
            "apiVersion": "2016-08-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', '/subscriptions/', subscription().subscriptionId,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('contentPlanName'))]": "empty"
            },
            "resources": [
                {
                    "type": "siteextensions",
                    "name": "Microsoft.ApplicationInsights.AzureWebSites",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('contentAppName'))]"
                    ],
                    "properties": {
                    }
                }
            ],
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', parameters('contentAppName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.9.1"
                        }
                    ],
                    "phpVersion": "7.1"
                },
                "name": "[parameters('contentAppName')]",
                "serverFarmId": "[concat('/subscriptions/', subscription().subscriptionId,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('contentPlanName'))]",
                "hostingEnvironment": ""
            },
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('contentPlanName'))]",
                "[resourceId('microsoft.insights/components/', parameters('contentAppName'))]"
            ]
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "Tier": "[first(skip(split(parameters('sku'), ' '), 1))]",
                "Name": "[first(split(parameters('sku'), ' '))]"
            },
            "name": "[parameters('contentPlanName')]",
            "apiVersion": "2015-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "name": "[parameters('contentPlanName')]",
                "workerSizeId": "0",
                "reserved": false,
                "numberOfWorkers": "1",
                "hostingEnvironment": ""
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "name": "[parameters('contentAppName')]",
            "apiVersion": "2014-04-01",
            "location": "[parameters('appInsightsLocation')]",
            "tags": {
                "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('contentAppName'))]": "Resource"
            },
            "properties": {
                "applicationId": "[parameters('contentAppName')]",
                "Request_Source": "AzureTfsExtensionAzureProject"
            }
        }
    ]
}