@model IEnumerable<GovUk.Education.ExploreEducationStatistics.Content.Model.Publication>

@{
    ViewData["Title"] = "Publications";
}

<h1 class="govuk-heading-l">Publications</h1>

<p>
    <a asp-action="Create" class="govuk-button">Create new publication</a>
</p>
<table class="govuk-table">
    <caption class="govuk-table__caption">Current publications</caption>
    <thead class="govuk-table__head">
    <tr class="govuk-table__row">
        
        <th class="govuk-table__header">
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th class="govuk-table__header">
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th class="govuk-table__header">
            @Html.DisplayNameFor(model => model.Topic)
        </th>
        <th class="govuk-table__header"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr class="govuk-table__row">
            
            <td class="govuk-table__header">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="govuk-table__cell">
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td class="govuk-table__cell">
                @Html.DisplayFor(modelItem => item.Topic.Title)
            </td>
            <td class="govuk-table__cell">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
