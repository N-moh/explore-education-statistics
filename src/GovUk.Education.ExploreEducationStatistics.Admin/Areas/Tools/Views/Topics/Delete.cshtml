@model GovUk.Education.ExploreEducationStatistics.Content.Model.Topic

@{
    ViewData["Title"] = "Delete";
}

<span class="govuk-caption-l">Topic</span>
<h1 class="govuk-heading-l">@Model.Title</h1>

<h3>Are you sure you want to delete this?</h3>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h3 class="govuk-heading-m">Details</h3>

        <table class="govuk-table">
            <tbody>
            <tr class="govuk-table__row">
                <td class="govuk-table__header">
                    @Html.DisplayNameFor(model => model.Theme)
                </td>
                <td class="govuk-table__cell">
                    @Html.DisplayFor(model => model.Theme.Title)
                </td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__header">
                    @Html.DisplayNameFor(model => model.Slug)
                </td>
                <td class="govuk-table__cell">
                    /@Html.DisplayFor(model => model.Slug)/
                </td>
            </tr>
            <tr class="govuk-table__row">
                <td class="govuk-table__header">
                    @Html.DisplayNameFor(model => model.Summary)
                </td>
                <td class="govuk-table__cell">
                    @Html.DisplayFor(model => model.Summary)
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <input type="submit" value="Delete" class="govuk-button"/> |
    <a asp-action="Index" class="govuk-back-link">Back to List</a>
</form>