@model List<FileViewModel>
@{
    ViewData["Title"] = "Files";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="govuk-heading-l">Files</h1>

<table class="govuk-table">
    <caption class="govuk-table__caption">Dates and amounts</caption>
    <thead class="govuk-table__head">
    <tr class="govuk-table__row">
        <th class="govuk-table__header" scope="col">Upload</th>
        <th class="govuk-table__header" scope="col">File</th>
        <th class="govuk-table__header" scope="col">Link</th>
    </tr>
    </thead>
    <tbody class="govuk-table__body">
    @foreach (var file in Model)
    {
        <tr class="govuk-table__row">
            <th class="govuk-table__cell">@file.UploadId</th>
            <td class="govuk-table__cell">@file.FileName</td>
            <td class="govuk-table__cell"><a class="govuk-link" href="@file.Path">link</a></td>

        </tr>
    }
    </tbody>
</table>