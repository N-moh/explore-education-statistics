@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="govuk-heading-l">Upload files</h1>

<form method="post" enctype="multipart/form-data" asp-controller="File" asp-action="Post">
    <div class="govuk-form-group">
        <label class="govuk-label" for="file-upload-1">
            Upload a files
        </label>
        <input class="govuk-file-upload" id="file-upload-1" type="file" name="files" multiple />
    </div>

    <div class="form-group">
        <input type="submit" class="govuk-button" value="Upload" />
    </div>
</form>