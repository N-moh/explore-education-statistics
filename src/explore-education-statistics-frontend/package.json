{
  "name": "explore-education-statistics-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/classnames": "^2.2.6",
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "govuk-frontend": "^2.4.1",
    "jest-dom": "^3.0.0",
    "jest-serializer-html": "^6.0.0",
    "moment": "^2.23.0",
    "node-sass": "^4.11.0",
    "normalize.css": "^8.0.1",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-markdown": "^4.0.4",
    "react-moment": "^0.8.4",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.2",
    "react-testing-library": "^5.4.2",
    "stylelint": "^9.9.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-sass-guidelines": "^5.3.0",
    "stylelint-prettier": "^1.0.5",
    "tslint": "^5.12.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "assets": "npm-run-all clean copy-assets",
    "clean": "rimraf public/assets",
    "copy-assets": "ncp node_modules/govuk-frontend/assets public/assets && ncp node_modules/govuk-frontend/all.js public/all.js",
    "start": "npm run assets && react-scripts start",
    "prebuild": "CI=true npm-run-all assets test lint format:check",
    "build": "react-scripts build",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,html}'",
    "format:check": "prettier --list-different 'src/**/*.{js,jsx,ts,tsx,css,scss,html}'",
    "lint": "npm-run-all lint:js lint:style",
    "lint:js": "tslint --project tsconfig.json 'src/**/*.{ts,tsx}'",
    "lint:style": "stylelint 'src/**/*.{scss,css}'",
    "test": "react-scripts test",
    "test:snapshot": "react-scripts test -u",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "resetMocks": true,
    "snapshotSerializers": [
      "jest-serializer-html"
    ]
  }
}
