{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters":{
    "publisherAppName": {
      "type": "string"
    },
    "ls_sql_statistics_connectionString": {
      "type": "string",
      "metadata": {
        "description": "Secure string for 'connectionString' of 'ls_sql_statistics'"
      }
    },
    "ls_sql_public_statistics_connectionString": {
      "type": "string",
      "metadata": {
        "description": "Secure string for 'connectionString' of 'ls_sql_public_statistics'"
      }
    },
    "dataFactoryName": {
      "type": "string",
      "metadata": {
        "description": "The data factory name"
      }
    }
  },
  "variables":{
    "templateBaseUrl": "https://raw.githubusercontent.com/dfe-analytical-services/explore-education-statistics/master/infrastructure/templates/"
  },
  "resources":[
    {
      "name":"[parameters('dataFactoryName')]",
      "apiVersion":"2018-06-01",
      "type":"Microsoft.DataFactory/factories",
      "location":"[resourceGroup().location]",
      "identity":{
        "type":"SystemAssigned"
      },
      "properties": {},
      "dependsOn": [
      ]
    },
    {
      "name": "datafactory-components",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'datafactory/components/template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "factoryName": {
            "value": "[parameters('dataFactoryName')]"
          },
          "publisherAppName": {
            "value": "[parameters('publisherAppName')]"
          },
          "ls_sql_statistics_connectionString": {
            "value": "[parameters('ls_sql_statistics_connectionString')]"
          },
          "ls_sql_public_statistics_connectionString": {
            "value": "[parameters('ls_sql_public_statistics_connectionString')]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.DataFactory/factories', parameters('dataFactoryName'))]"
      ]
    }
  ]
}