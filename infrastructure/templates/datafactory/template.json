{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters":{
    "subscription": {
      "type": "string",
      "metadata": {
        "description": "Data Hub Subscription Name e.g. s101d01. Used as a prefix for created resources"
      }
    },
    "environment": {
      "type": "string",
      "defaultValue": "ees",
      "metadata": {
        "description": "Data Hub Environment Name e.g. ees. Used as a prefix for created resources"
      }
    },
    "publicAppName": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    }
  },
  "variables":{
    "dataFactoryName": "[concat(parameters('subscription'), '-df-', parameters('environment'), '-release')]",
    "templateBaseUrl": "https://raw.githubusercontent.com/dfe-analytical-services/explore-education-statistics/master/infrastructure/templates/"
  },
  "resources":[
    {
      "name":"[variables('dataFactoryName')]",
      "apiVersion":"2018-06-01",
      "type":"Microsoft.DataFactory/factories",
      "location":"[resourceGroup().location]",
      "identity":{
        "type":"SystemAssigned"
      },
      "properties": {}
    },
    {
      "name": "datafactory-components",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'datafactory/components/template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "dataFactoryName": {
            "value": "[variables('dataFactoryName')]"
          },
          "publicAppName": {
            "value": "[parameters('publicAppName')]"
          },
          "keyVaultName": {
            "value": "[parameters('keyVaultName')]"
          }
        }
      },
      "dependsOn": [
        "[variables('dataFactoryName')]"
      ]
    }
  ]
}